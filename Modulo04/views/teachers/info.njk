{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/CSS/teacher.css"/>
    <link rel="stylesheet" href="/CSS/card.css">
    <link rel="stylesheet" href="/CSS/table.css">
    <title>Professor</title>
{% endblock %}

{% block content %}
    <div id="content">
        <div class="card table-container">
            <table>
                <thead>
                    <tr>
                        <th>
                            <h1>Educador(a)</h1>
                        </th>
                        <th>
                            <h1>Acompanhamento</h1>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for teacher in teachers %}
                        <tr>
                            <td>
                                <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                            <td>{{teacher.knowledge.join(', ')}}</td>
                            <td>
                                <a href="/professores/{{ teacher.id }}"><img src="/media/perfil.svg" alt=""></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}{% endblock %}