{% extends "admin/layout.njk" %}

{%block head %}
   <link rel="stylesheet" href="/CSS/general/showRecipe.css"/>
   <link rel="stylesheet" href="/CSS/admin/header.css">
   <title>Foodfy -
      {{recipe.title}}</title>
{% endblock %}

{%block content %}
   <div id="content">
      <div id="title">
         <h2>Receita:
            {{recipe.title}}</h2>
         <a id="editRecipe">Editar receita</a>
      </div>
      <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}">
      <div></div>
      <h1>{{recipe.title}}</h1>
      <h3>por
         {{recipe.author}}</h3>
      <div>
         <h2>Ingredientes</h2>
      </div>
      <ul id="ingredients">
         {% for ingredient in recipe.ingredients%}
            <li>{{ingredient}};</li>
         {% endfor %}
      </ul>

      <div>
         <h2>Modo de preparo</h2>
      </div>
      <ul id="preparation">
         {% for step in recipe.preparation%}
            <li>{{step}}</li>
         {% endfor %}
      </ul>

      <div>
         <h2>Informações adicionais</h2>
      </div>
      <span id="information">{{recipe.information}}</span>
   </div>
{% endblock %}

{% block scripts%}
   <script src="/JS/editRecipe.js"></script>
{% endblock %}