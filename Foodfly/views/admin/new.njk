{% extends "admin/layout.njk" %}

{%block head %}
   <link rel="stylesheet" href="/CSS/admin/form.css"/>
   <title>Foodfy Nova Receita</title>
{% endblock %}

{% block content %}
   <div id="content">
      <div id="title">
         <h2>Criando receita</h2>
         <a onclick="document.getElementById('formNew').submit();">Salvar receita</a>
      </div>
      <form id="formNew" method="post" action="/admin/receitas">
         <div class="item">
            <span>Imagem da receita</span>
            <input type="url" name="image">
         </div>
         <div class="item">
            <span>Nome da receita</span>
            <input name="title">
         </div>
         <div class="item">
            <span>Autor</span>
            <input name="author">
         </div>
         <div class="item" id="itemIngredients">
            <span>Ingredientes</span>
            <input name="ingredients[]">
            <h4 id="addIngredient">Adicionar novo ingrediente</h4>
         </div>
         <div class="item" id="itemPreparation">
            <span>Modo de preparo</span>
            <input name="preparation[]">
            <h4 id="addPreparation">Adicionar novo passo</h4>
         </div>
         <div class="item">
            <span>Informações adicionais</span>
            <textarea name="information" rows="15"></textarea>
         </div>
      </form>
   </div>
{% endblock %}

{% block scripts %}
   <script src="/JS/newItem.js"></script>
{% endblock %}