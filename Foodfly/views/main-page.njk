{% extends "layout.njk" %}

{%block head %}
    <link rel="stylesheet" href="/CSS/style.css"/>
    <title>Foodfy</title>
{% endblock %}

{%block content %}
    <div id="content">
        <div id="presentation">
            <div id="text">
                <h1>As melhores receitas</h1>
                <h4>Aprenda a contruir os melhores pratos com receitas criadas por profissionais do mundo inteiro</h4>
            </div>
            <img src="/assets/chef.png" alt="Foodfy"/>
        </div>
        <div class="catalog">
            <h2>Mais acessadas</h2>
            <ul id="items">
                {% for recipe in topPicks %}
                    <li class="item" id="top{{recipe.id}}">
                        <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}"/>
                        <h3>{{recipe.title}}</h3>
                        <h4>por
                            {{recipe.author}}</h4>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="/JS/recipes.js"></script>
{% endblock %}